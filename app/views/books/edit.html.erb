<h1>Editing Book</h1>

<%= form_with model: @book,url: update_book_path(@book.id),method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '保存' %>
  
<% end %>

<%= link_to 'show',show_path(@book.id) %>
<%= link_to 'Back',books_index_path %>